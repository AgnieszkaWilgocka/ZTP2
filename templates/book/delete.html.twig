{% extends 'base.html.twig' %}

{% block title %}
{{ 'title.book_delete'|trans }}
{% endblock %}

{% block body %}
<h1>{{ 'title.book_delete'|trans }}</h1>
    <div class="container">
    <div class="card border-0 shadow my-5">
    <div class="card-body p-5">
    {{ form_start(form) }}
    {{ form_widget(form) }}

