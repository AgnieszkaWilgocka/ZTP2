        <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-primary">

    </div>

    <div>
        <a class="btn btn-primary"  href="{{ url('book_index') }}" role="button">
            {{ 'action_back_to_list'|trans }}
