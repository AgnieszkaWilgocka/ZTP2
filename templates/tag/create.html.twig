{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.tag_create'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.tag_create'|trans }}</h1>

    {{ form_start(form, {method: 'POST', action: url('tag_create')}) }}

    {{ form_widget(form) }}

    <div class="form-group row float-sm_right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary">

    </div>

    <div>
        <a href="{{ url('tag_index') }}">
            {{ 'powrot' }}
        </a>
    </div>

    {{ form_end(form) }}
{% endblock %}