{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.favourite_delete'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.favourite_delete'|trans }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="form-group row float-sm_right">
        <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-primary">
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('favourite_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>

    {{ form_end(form) }}
{% endblock %}