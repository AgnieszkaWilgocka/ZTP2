{% extends 'base.html.twig' %}

{% block title %}
{{ 'title.favourite_create'|trans }}
{% endblock %}

{% block body %}
<h1>{{ 'title.favourite_create'|trans }}</h1>
    <div class="container">
    <div class="card border-0 shadow my-5">
    <div class="card-body p-5">
    {{ form_start(form, {method: 'POST', action: url('favourite_create')}) }}

    {{ form_widget(form) }}

    <div class="form-group row float-sm_right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary">

    </div>

        <a class="btn btn-primary"  href="{{ url('category_index') }}" role="button">
            {{ 'action_back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
    </div>
    </div>
    </div>

{% endblock %}